{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "files": {
    "include": ["src/**/*.ts"],
    "ignore": [
      "src/contractsTypes/**/*.ts",
      "src/tests/**/*.ts",
      "src/handler/chains/ton/utils/tep64.ts"
    ]
  }
}
