{
  "compilerOptions": {
    "lib": ["ES2015", "dom"],
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
    },
  },
  "include": ["src/**/*.ts", "src/**/*.json"]
}
